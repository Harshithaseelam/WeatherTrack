<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Weekly Summary Button -->
        <Button
            android:id="@+id/button_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Past 7 days"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Refresh Button -->
        <Button
            android:id="@+id/button_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Refresh"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"
            android:padding="12dp" />

        <!-- Weather Info -->
        <TextView
            android:id="@+id/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature: --"
            android:textSize="20sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity: --"
            android:textSize="20sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition: --"
            android:textSize="20sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- Graph Title -->
        <TextView
            android:id="@+id/text_graph_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ Temperature Graph (Last 7 Days)"
            android:textSize="18sp"
            android:textColor="#37474F"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Temperature Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartTemperature"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>